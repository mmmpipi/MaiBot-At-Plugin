{
  "manifest_version": 1,
  "name": "麦麦at插件",
  "version": "1.0.0",
  "description": "让你的麦麦at你那个喜欢睡觉的群u起床！",
  "author": {
    "name": "mmmpipi",
    "url": "https://github.com/mmmpipi"
  },
  "license": "GPL-v3.0-or-later",
  "host_application": {
    "min_version": "0.12.1"
  },
  "homepage_url": "https://github.com/mmmpipi/MaiBot-At-Plugin",
  "repository_url": "https://github.com/mmmpipi/MaiBot-At-Plugin",
  "keywords": [
    "at",
    "艾特",
    "@"
  ],
  "categories": [
    "Communication"
  ],
  "default_locale": "zh-CN",
  "locales_path": "_locales",
  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "communication",
    "components": [
      {
        "type": "event_handler",
        "name": "post_at_handler",
        "description": "将llm输出的at格式转换为消息段"
      },
      {
        "type": "event_handler",
        "name": "llm_at_handler",
        "description": "为llm注入使用at的格式"
      },
      {
        "type": "tool",
        "name": "get_member_info_by_name",
        "description": "获取群成员信息"
      }
    ]
  },
  "id": "mmmpipi.MaiBot-At-Plugin"
}